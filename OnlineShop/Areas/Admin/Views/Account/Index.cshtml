@model OnlineShop.Areas.Admin.Models.LoginAccount
<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Login Account</title>

    <!-- Core CSS - Include with every page -->
    <link href="~/Assets/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/Admin/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- SB Admin CSS - Include with every page -->
    <link href="~/Assets/Admin/css/sb-admin.css" rel="stylesheet">

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Index", "Account", FormMethod.Post, new { @class = "form-group" }))
                        {
                            <fieldset>
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email", @autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        @Html.CheckBoxFor(model => model.RememberMe) Remember Me
                                    </label>
                                </div>
                                <div class="form-group">
                                    <div class="g-recaptcha" data-sitekey="@TempData["ReCaptchaKey"]"></div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-lg btn-success btn-block">Log in</button>
                                </div>
                                <div class="text-center">
                                    New to site?
                                    <a href="@Url.Action("Create", "Account")"> Create Account </a> <br />
                                    <a href="@Url.Action("Forgetpassword", "Account")">Lost your password?</a>
                                </div>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (TempData.ContainsKey("ReCaptchaKey"))
    {
        <script src='https://www.google.com/recaptcha/api.js'></script>
    }
    <!-- Core Scripts - Include with every page -->
    <script src="~/Assets/Admin/js/jquery-1.10.2.js"></script>
    <script src="~/Assets/Admin/js/bootstrap.min.js"></script>
    <script src="~/Assets/Admin/js/plugins/metisMenu/jquery.metisMenu.js"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="~/Assets/Admin/js/sb-admin.js"></script>
</body>
</html>
