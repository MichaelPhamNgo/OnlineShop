@model Models.EF.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- BREADCRUMB-->
<section class="au-breadcrumb m-t-75">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="au-breadcrumb-content">
                        <div class="au-breadcrumb-left">
                            <ul class="list-unstyled list-inline au-breadcrumb__list">
                                <li class="list-inline-item active">
                                    <a href="#">Home</a>
                                </li>
                                <li class="list-inline-item seprate">
                                    <span>/</span>
                                </li>
                                <li class="list-inline-item">Category</li>
                                <li class="list-inline-item seprate">
                                    <span>/</span>
                                </li>
                                <li class="list-inline-item">Detail</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END BREADCRUMB-->
<section class="statistic">
    <div class="section__content section__content--p15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong>Create A New Category</strong>
                        </div>
                        @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="card-body card-block">
                                @if (!(ViewBag.CreateCategorySuccessMessage == null))
                                {
                                    <div class="row form-group">
                                        <div class="col-12">
                                            <div class="alert alert-success" role="alert">@ViewBag.CreateCategorySuccessMessage</div>
                                        </div>
                                    </div>
                                }
                                @if (!(ViewBag.CreateCategoryErrorMessage == null))
                                {
                                    <div class="row form-group">
                                        <div class="col-12">
                                            <div class="alert alert-danger" role="alert">@ViewBag.CreateCategoryErrorMessage</div>
                                        </div>
                                    </div>
                                }
                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label class=" form-control-label">Category Name <i class="text-danger">*</i></label>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        @Html.TextBoxFor(model => model.Name, null, new { @class = "form-control", @placeholder = "Category Name", @autofocus = "autofocus" })
                                        <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label class=" form-control-label">SEO Title</label>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        @Html.TextBoxFor(model => model.SeoTitle, null, new { @class = "form-control", @placeholder = "SEO Title" })
                                        <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.SeoTitle, "", new { @class = "text-danger" })</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label class=" form-control-label">Meta Keywords</label>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        @Html.TextBoxFor(model => model.MetaKeywords, null, new { @class = "form-control", @placeholder = "Meta Keywords" })
                                        <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.MetaKeywords, "", new { @class = "text-danger" })</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label class=" form-control-label">Meta Title</label>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        @Html.TextBoxFor(model => model.MetaTitle, null, new { @class = "form-control", @placeholder = "Meta title" })
                                        <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label class=" form-control-label">Meta Description</label>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        @Html.TextAreaFor(model => model.MetaDescription, new { @class = "form-control", @placeholder = "Meta description", @rows = "9" })
                                        <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "text-danger" })</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label class=" form-control-label">Its Parent</label>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        @Html.DropDownListFor(model => model.ParentId, null, "- Please select category -", new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label class=" form-control-label">Order</label>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        @Html.TextBoxFor(model => model.DisplayOrder, null, new { @class = "form-control", @placeholder = "Order" })
                                        <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })</small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-2">
                                        <label class=" form-control-label">Show On Home</label>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        @Html.CheckBox("ShowOnHome", false)
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fa fa-dot-circle-o"></i> Submit
                                </button>
                                <button type="reset" class="btn btn-danger btn-sm">
                                    <i class="fa fa-ban"></i> Reset
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <p>
                @Html.ActionLink("Back to category index", "Index", "Category")
            </p>
        </div>
    </div>
</section>
<!-- END STATISTIC-->