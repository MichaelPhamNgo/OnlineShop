@model Models.EF.Tag

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin/Home">Home</a></li>
        <li class="breadcrumb-item"><a href="/Admin/Tag">Tag</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create A New Tag</li>
    </ol>
</nav>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Create A New Tag</strong>
            </div>
            @using (Html.BeginForm("Create", "Tag", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()                
                <div class="card-body card-block">
                    @if (!(ViewBag.SuccessMessage == null))
                    {
                        <div class="row form-group">
                            <div class="col-12">
                                <div class="alert alert-success" role="alert">@ViewBag.SuccessMessage</div>
                            </div>
                        </div>
                    }
                    @if (!(ViewBag.ErrorMessage == null))
                    {
                        <div class="row form-group">
                            <div class="col-12">
                                <div class="alert alert-danger" role="alert">@ViewBag.ErrorMessage</div>
                            </div>
                        </div>
                    }
                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label class=" form-control-label">Tag Name <i class="text-danger">*</i></label>
                        </div>
                        <div class="col-12 col-md-10">
                            @Html.TextBoxFor(model => model.Name, null, new { @class = "form-control", @placeholder = "Tag Name", @autofocus = "autofocus" })
                            <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</small>
                        </div>
                    </div>                    
                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label class=" form-control-label">Order</label>
                        </div>
                        <div class="col-12 col-md-10">
                            @Html.TextBoxFor(model => model.DisplayOrder, null, new { @class = "form-control", @placeholder = "Order" })
                            <small class="form-text text-muted">@Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })</small>
                        </div>
                    </div>                    
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Submit
                    </button>
                    <button type="reset" class="btn btn-danger btn-sm">
                        <i class="fa fa-ban"></i> Reset
                    </button>
                </div>
            }
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to tag index", "Index", "Tag")
</p>

