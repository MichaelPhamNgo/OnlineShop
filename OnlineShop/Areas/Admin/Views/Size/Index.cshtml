@{
    ViewBag.Title = "View Size List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Scripts{    
    <script src="~/Assets/Admin/controllers/size/index.js"></script>
    <script>
        var size = new sizeController();
        size.initialize();
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <h3></h3>
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-sm-8 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Size List</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="title_left">
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <div>
                                <button id="btnCreate" class="btn btn-success">Add Size</button>
                            </div>
                        </div>
                    </div>
                    <div class="title_right">
                        <div class="col-md-4 col-sm-4 col-xs-12 form-group pull-right">
                            <div class="input-group">
                                <input type="text" id="txtKeyword" class="form-control" placeholder="Search for...">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" id="btnSearch" type="button">Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th width="20%">Action</th>
                                </tr>
                            </thead>
                            <tbody id="tbl-content">
                            </tbody>
                        </table>
                        <!--Pagination-->
                        <div class="row">
                            <div class="col-sm-5">
                                <div id="datatable-checkbox_info">
                                    <select id="ddlShowPage">
                                        <option value="10" selected="selected">10</option>
                                        <option value="20">20</option>
                                        <option value="30">30</option>
                                        <option value="50">50</option>
                                    </select>
                                    <span class="item-per-page">
                                        records/page.
                                    </span>
                                    Total records: <strong id="lblTotalRecords"></strong>
                                </div>
                            </div>
                            <div class="col-sm-7">
                                <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                                    <ul id="paginationUL" style="float:right;"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{Id}}</td>
        <td>{{Name}}</td>
        <th scope="row">
            <button class="btn btn-default btn-edit" data-id="{{Id}}"><i class="fa fa-pencil"></i></button>
            <button class="btn btn-danger btn-delete" data-id="{{Id}}"><i class="fa fa-trash"></i></button>
        </th>
    </tr>
</script>
